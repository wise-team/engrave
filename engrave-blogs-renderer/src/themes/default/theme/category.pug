extends website

append scripts
    script(src="/js/main.js")

block content
    meta(name="description", content= blog.opengraph_default_description)
    input(type="hidden" value=category )#category_indicator
    .posts-block.standard-box
        .title-section
            h1= 'Category'
        .row#posts
            if latest.length
                each item in latest
                    include partials/box.pug            
            else
                h3= "No posts in this category"
    
        if latest.length
            .center-button
                a(href="#").load-more= "Load more"