extends website

append scripts
    script(src="/js/main.js")

block content
    meta(name="description", content= config.opengraph_default_description)
    input(type="hidden" value=category )#category_indicator
    .posts-block.standard-box
        .title-section
            h1= category_fullname
        .row#posts
            if latest.length
                each item in latest
                    include partials/box.pug            
            else
                h3= translation.frontpage.no_posts_in_category
    
        if latest.length
            .center-button
                a(href="#").load-more= translation.frontpage.loadmore_text