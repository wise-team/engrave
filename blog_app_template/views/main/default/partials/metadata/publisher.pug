.metadata__publisher(itemprop="publisher" itemscope itemtype="https://schema.org/Organization")
    div(itemprop="logo" itemscope itemtype="https://schema.org/ImageObject")
        meta(itemprop="url" content= config.website_logo_url)
        meta(itemprop="width" content="350")
        meta(itemprop="height" content="350")
    meta(itemprop="name" content= config.blog_title)
    meta(itemprop="url" content= "https://" + config.domain)
    meta(itemprop="sameas" content="https://facebook.com/glodniwiedzy")