extends website.pug

append scripts
  script(src="/js/parsley.min.js")
  script(src="/js/configure.js")
  script(src="/js/image-picker.min.js")
  link(href='/css/image-picker.css', rel='stylesheet')

block body
  .content
    .container-fluid
      .row
        .col-md-8
          .card
            .card-header
              h4.card-title Your blog is almost ready
              span We just need few more informations
              hr
            .card-body
              form#configure
                .row
                  .col-md-6
                    .form-group
                      
                      if blogger.tier == 15
                        //- label Add your domain
                        p Please leave comment in this topic:

                        a(href='https://steemit.com/pl-projekty/@nicniezgrublem/engrave-pierwsza-platforma-blogowa-oparta-na-sieci-steem') ENAGRAVE at Steemit.com
                      
                      else if blogger.tier == 12
                        label Information
                        p Use your registrar's DNS servers and change <strong>A</strong> record to <strong>23.92.24.30</strong>.
                        label Domain
                        input.form-control(name='domain', pattern="^[a-zA-Z0-9][a-zA-Z0-9-_]+\.[a-zA-Z]{2,11}?$", type='text', placeholder='example.com', value='' parsley-trigger="change" required)
                      
                      else
                        label Blog address
                        input.form-control.text-right(name='subdomain', pattern="^[a-zA-Z0-9][a-zA-Z0-9-_]{2,24}?$", title="Use no special characters and whitespaces. Allowed length: 2-24 characters", type='text', placeholder='Blog address', value= blogger.steem_username)
                  
                  .col-md-6
                    .form-group
                      if blogger.tier == 10
                        label Domain
                        select.form-control(name="domain")
                          each domain in config.blogs_domains
                            option(value=domain )= "." + domain
                .row.justify-content-md-center
                  .col-md-12
                    .form-group
                      label Theme (can be changed later)
                      select.form-control.image-picker(name="theme")#category-select
                        each theme, index in themes
                          option(value=theme.slug, data-img-src=`/img/${theme.slug}-theme.png`, data-img-class= (index == 0) ? "first" : "last")= theme.name
                .row
                  .col-md-12
                    .form-group
                      label Category
                      select.form-control(name="category")
                        each category in config.blogs_categories
                          option(value=category )= category

                a(href='/authorize/tier/cancel').btn.btn-link Change your tier
                if blogger.tier != 15
                  button.btn.btn-success.btn-fill.pull-right#finish-button(type='submit') Finish configuration
                .clearfix
